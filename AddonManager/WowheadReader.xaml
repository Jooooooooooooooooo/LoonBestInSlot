<Window x:Class="AddonManager.WowheadReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonManager"
        mc:Ignorable="d"
        Title="WowheadReader" Height="768" Width="1024
">
    <Grid>
        <Button Content="ReadSite" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="txtUrl" HorizontalAlignment="Left" Margin="75,11,0,0" Text="https://tbc.wowhead.com/guides/balance-druid-dps-pre-raid-best-in-slot-gear-burning-crusade-classic-wow" TextWrapping="Wrap" VerticalAlignment="Top" Width="675"/>
        <ScrollViewer Margin="0,35,0,0" BorderBrush="Gray" BorderThickness="1">
            <TextBlock x:Name="ConsoleOut" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" />
        </ScrollViewer>
        <TextBox x:Name="txtSpec" HorizontalAlignment="Left" Margin="755,11,0,0" TextWrapping="Wrap" Text="DruidBalance" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtPhase" HorizontalAlignment="Left" Margin="910,11,0,0" TextWrapping="Wrap" Text="Phase0" VerticalAlignment="Top" Width="83"/>
    </Grid>
</Window>
