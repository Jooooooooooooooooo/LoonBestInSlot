<Window x:Class="AddonManager.ItemSourceFinder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonManager"
        mc:Ignorable="d"
        Title="ItemSourceFinder" Height="450" Width="800">
    <Grid>
        <Button Content="Read" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Read_Click"/>
        <Button Content="Import" HorizontalAlignment="Left" Margin="45,10,0,0" VerticalAlignment="Top" Click="Import_Click"/>
        <Button Content="UpdateAll" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Click="Update_Click"/>
        <TextBox x:Name="txtItemId" HorizontalAlignment="Left" Margin="150,11,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <ScrollViewer Margin="0,35,0,0" BorderBrush="Gray" BorderThickness="1">
            <TextBox x:Name="ConsoleOut" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" />
        </ScrollViewer>
    </Grid>
</Window>
