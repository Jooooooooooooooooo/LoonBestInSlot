<Window x:Class="AddonManager.ConvertersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonManager"
        mc:Ignorable="d"
        Title="ConvertersWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Convert" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Click="Convert_Click"/>
        <ComboBox x:Name="cmbConvertType" HorizontalAlignment="Left" Margin="75,11,0,0" Text="EmblemConverter" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="lblStatus" HorizontalAlignment="Left" Margin="255,8,0,0" Width="150" Content="Ready !"/>
        <ScrollViewer Margin="0,35,0,0" BorderBrush="Gray" BorderThickness="1">
            <TextBox x:Name="txtJsonToParse" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
